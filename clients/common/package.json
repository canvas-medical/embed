{
  "name": "@canvas-medical/embed-common",
  "version": "0.1.1",
  "private": false,
  "main": "src/index.ts",
  "scripts": {
    "build:esm": "webpack build",
    "gitpkg": "gitpkg publish --registry git@github.com:modern-age/canvas-embed.git",
    "prepack": "npm run build:esm",
    "start": "echo 'No Start Provided'",
    "test": "TZ=UTC jest ./tests",
    "test:update": "yarn test --updateSnapshot"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "pragmaFrag": "Fragment"
        }
      ],
      "babel-plugin-styled-components"
    ],
    "presets": [
      "babel-preset-preact"
    ]
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "prettier"
    ]
  },
  "jest": {
    "preset": "jest-preset-preact",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "color": "^4.2.1",
    "focus-trap-react": "^8.9.2",
    "preact": "^10.6.5",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@nick.telsan/eslint-config-preact": "^1.3.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/preact": "^2.0.1",
    "@types/color": "^3.0.3",
    "@types/jest": "^27.4.0",
    "@types/styled-components": "^5.1.22",
    "babel-plugin-styled-components": "^2.0.2",
    "babel-preset-preact": "^2.0.0",
    "css-loader": "^6.6.0",
    "eslint": "^8.9.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "preact-render-to-string": "^5.1.19",
    "prettier": "^2.5.1",
    "regenerator-runtime": "^0.13.9",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
